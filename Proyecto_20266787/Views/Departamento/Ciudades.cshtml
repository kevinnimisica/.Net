@model IEnumerable<Modelo.CiudadesModel>

@{
    ViewBag.Title = "Ciudades";
}

<h2>Ciudades</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Ciudad")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreCiudad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartamentoId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreCiudad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartamentoId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", "Ciudad", new { id=item.Id }, null) |
            @Html.ActionLink("Details", "Details", "Ciudad", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", "Ciudad", new { id=item.Id }, null)
        </td>
    </tr>
}

</table>
